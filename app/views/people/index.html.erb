<div class="container-fluid col-sm-6">
  <h1>Listing people</h1>
  <br>
  <%= link_to 'Add a new person', new_person_path, class: 'btn btn-primary' %>
  <br><br>
  <div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>First name & Last name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Delete</th>
      </tr>
    </thead>
    <% @people.each do |person| %>
      <tbody>
        <tr>
          <td><%= link_to "#{person.first_name} #{person.last_name}", person %></td>
          <td><%= person.email %></td>
          <td><%= person_age(person.birthday) %></td>
          <td><%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
  </div>
</div>
<br><br>
