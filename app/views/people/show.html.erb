<div class="container-fluid col-sm-6">
  <h1><%= "#{@person.first_name} #{@person.last_name}'s profile" %></h1>
  <br><br>
  <div class="table-responsive">
  <table class="table table-hover">
    <tr>
      <th class="text-nowrap" scope="row">First name</th>
      <td colspan="3"><%= @person.first_name %></td>
    </tr>
    <tr>
      <th class="text-nowrap" scope="row">Last name</th>
      <td colspan="3"><%= @person.last_name %></td>
    </tr>
    <tr>
      <th class="text-nowrap" scope="row">Email</th>
      <td colspan="3"><%= @person.email %></td>
    </tr>
    <tr>
      <th class="text-nowrap" scope="row">Job</th>
      <td colspan="3"><%= @person.job %></td>
    </tr>
    <tr>
      <th class="text-nowrap" scope="row">Gender</th>
      <td colspan="3"><%= @person.gender %></td>
    </tr>
    <tr>
      <th class="text-nowrap" scope="row">Birthday (Age)</th>
      <td colspan="3"><%= "#{@person.birthday} (#{person_age(@person.birthday)})" %></td>
    </tr>
    <tr>
      <th class="text-nowrap" scope="row">Bio</th>
      <td colspan="3"><%= @person.bio %></td>
    </tr>
  </table>
  </div>
  <div> 
    <p>
      <%= link_to 'Edit', edit_person_path(@person), class: 'btn btn-primary' %>
      <%= link_to 'Cancel', people_path, class: 'btn btn-default' %>
      <%= link_to 'Delete', @person, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
</div>
<br><br>
